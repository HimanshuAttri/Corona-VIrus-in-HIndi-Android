<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/res"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"></ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="कोरोना वायरस हिंदी में!"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#34495E"
                android:textSize="35dp"></TextView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/ent"></ImageView>

                <Button

                    android:background="#E74C3C"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/ent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="मनोरंजन"
                    android:textSize="20dp"
                    android:textStyle="bold"></Button>
                "
                android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/dd"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="क्या करें क्या न करें"
                    android:textSize="20dp"
                    android:id="@+id/dosd"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/info"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="क्या है कोरोनावायरस रोग?"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/sym"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/sym"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="कोरोना के लक्षण"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/call"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/call"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="कोरोना हेल्पलाइन नंबर "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imwho"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/who"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/whohi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"


                    android:text="विश्‍व स्‍वास्‍थ्‍य संगठन"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imnews"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/corona"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/gnhi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="कोविड समाचार"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/immoh"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/moh"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/mohhi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="स्वास्थ्य एवं परिवार कल्याण मन्त्रालय"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/world"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/map"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="3D मानचित्र "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/qa"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/qa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="कोरोना : सवाल जवाब"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/stats"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/stats"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="आंकड़े"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/imu"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/imu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="रोग प्रतिरोधक शक्ति बढ़ाएँ !"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/app"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/app"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="आरोग्य सेतु App इनस्टॉल करें "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/delg"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/delg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="दिल्ली सरकार वेबसाइट"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/upg"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/upg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="उत्तर प्रदेश सरकार वेबसाइट "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/mpg"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/mpg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="मध्य प्रदेश सरकार वेबसाइट "
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/brg"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/brg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="बिहार सरकार वेबसाइट "
                    android:textSize="20dp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/feed"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="सवाल एवं सुझाव "
                    android:textSize="20dp"
                    android:id="@+id/test"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:src="@drawable/dev"></ImageView>

                <Button

                    android:background="#7F8C8D"
                    android:layout_margin="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="About "
                    android:textSize="20dp"
                    android:id="@+id/inst"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>